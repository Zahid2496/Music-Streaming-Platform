                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="Razihel"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>


                    //S1007

                    <LinearLayout
                        android:id="@+id/S1007"
                        android:layout_width="340dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/songbar"
                        android:onClick="handleSelection"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_margin="5dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/those_bygone_years" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="sans-serif-black"
                                android:text="Rise Up"
                                android:textColor="@color/black"
                                android:textSize="24sp"
                                app:srcCompat="@drawable/cover_art" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="Egzod, Veronica Bravo, M.I.M.E"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    <TextView
        android:id="@+id/songCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Song Count"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        style="@style/TEXT"
        android:fontFamily="sans-serif-light"/>

    </LinearLayout>

    </LinearLayout>

</RelativeLayout>