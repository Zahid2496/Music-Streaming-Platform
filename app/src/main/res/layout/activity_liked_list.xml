<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaylistActivity"
    android:background="@drawable/wallpaper2">

    <include
        android:id="@+id/include"
        layout="@layout/actionbar2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/san_marino_beach"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="Favourites"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/libraryScrollBG"
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="50dp"
        android:background="@drawable/scroll_playlist_bg">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerViewSong"
            android:layout_width="380dp"
            android:layout_height="380dp"
            android:paddingTop="17dp"
            tools:listitem="@layout/list_item"
            android:paddingBottom="13dp"
            android:rotationX="-1" />

    </LinearLayout>


    <TextView
        android:id="@+id/songCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Song Count"
        app:layout_constraintTop_toBottomOf="@+id/libraryScrollBG"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        style="@style/TEXT"
        android:fontFamily="sans-serif-light"/>

</androidx.constraintlayout.widget.ConstraintLayout>