<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/backgroundCover"
    android:backgroundTintMode="add">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/scroll_bg"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/songbar"
            android:backgroundTint="@color/purple_700"
            android:rotation="270"
            android:scaleType="centerCrop"
            android:src="@drawable/back_button"
            app:tint="@color/white" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:background="@drawable/searchview_bg"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="12dp">

            <ImageButton
                android:id="@+id/rotater"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/searchview_bg"
                android:backgroundTint="@color/black"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher_foreground"
                app:tint="@color/white"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:background="@drawable/searchview_bg"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="12dp">

        <ImageButton
            android:id="@+id/btnLikeSong"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/favourite_button"
            app:tint="@color/white"
            android:background="@drawable/searchview_bg"
            android:backgroundTint="@color/purple_200"
            android:scaleType="fitCenter"
            android:paddingTop="10dp"
            android:paddingBottom="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:background="@drawable/searchview_bg"
            android:backgroundTint="@color/purple_500"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="12dp">

            <ImageButton
                android:id="@+id/btnAddSong"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/add_to_library"
                app:tint="@color/white"
                android:background="@drawable/searchview_bg"
                android:backgroundTint="@color/black"
                android:scaleType="centerCrop"
                android:padding="8dp"/>

        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"/>

    <ImageView
        android:id="@+id/imgCoverArt"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="48dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/unavailable" />

    <TextView
        android:id="@+id/txtSongTitle"
        android:textColor="@color/purple_500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Song Title"
        android:textSize="26sp"
        android:fontFamily="sans-serif-black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/txtSongTitleFront"
            style="@style/TEXT"
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:layout_marginTop="-36dp"
            android:layout_height="wrap_content"
            android:text="Song Title"
            android:textSize="26sp"
            android:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/txtArtist"
        android:textColor="@color/purple_200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:text="Artiste"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp" />

        <TextView
            android:id="@+id/txtArtistFront"
            style="@style/TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:layout_marginTop="-25dp"
            android:text="Artiste"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp" />


        <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"/>

    <LinearLayout
        android:id="@+id/durationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/purple_200"
        android:orientation="vertical"
        android:visibility="invisible">

    <SeekBar
        android:id="@+id/durationbarBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hapticFeedbackEnabled="true"
        android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.8"/>

            <TextView
                android:id="@+id/elapsedTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0:00"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="8"/>

            <TextView
                android:id="@+id/remainingTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0:00"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.8"/>

        </LinearLayout>

    </LinearLayout>

        <include layout="@layout/song_playbar" />

</LinearLayout>

</LinearLayout>
