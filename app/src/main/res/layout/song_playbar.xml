<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="bottom"
    android:gravity="center"
    android:background="@color/purple_200"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:paddingBottom="12dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_repeatsong"
            android:backgroundTint="@color/black"
            android:layout_gravity="center"
            android:gravity="center">

        <ImageButton
            android:id="@+id/btnLoopSong"
            android:onClick="playLoop"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/btn_repeatsong"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_gravity="center" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtLoop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loop"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:textSize="15dp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:background="@drawable/btn_prevsong"
            android:backgroundTint="@color/white"
            android:layout_gravity="center"
            android:gravity="center">

        <ImageButton
            android:id="@+id/btnPrevious"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:src="@drawable/btn_prevsong"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:onClick="playPrevious"
            android:layout_marginBottom="5dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:background="@drawable/searchview_bg"
            android:layout_gravity="center"
            android:gravity="center">

        <ImageButton
            android:id="@+id/btnPlayPause"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/btn_playsong"
            android:background="@null"
            android:scaleType="fitCenter"
            android:onClick="PlayOrPauseMusic" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:background="@drawable/btn_nextsong"
            android:backgroundTint="@color/white"
            android:layout_gravity="center"
            android:gravity="center">

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:src="@drawable/btn_nextsong"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:onClick="playNext"
            android:layout_marginBottom="5dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:paddingBottom="12dp"
        android:layout_marginLeft="15dp">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_shuffle"
            android:backgroundTint="@color/black"
            android:gravity="center">

        <ImageButton
            android:id="@+id/btnShuffleSong"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/btn_shuffle"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:onClick="playShuffle" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtShuffle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shuffle"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</LinearLayout>